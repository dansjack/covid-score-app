<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@color/colorPrimaryLight"
    android:padding="10dp"
    tools:context=".LocationManualSelectionFragment">

    <TextView
        android:id="@+id/comparing_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="24dp"
        android:text="@string/comparing_text"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/compare_location_1"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:textSize="@dimen/std_text_size"
        app:layout_constraintTop_toBottomOf="@id/comparing_tv"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/compare_location_2"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:textSize="@dimen/std_text_size"
        app:layout_constraintTop_toBottomOf="@id/compare_location_1"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/compare_location_3"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_margin"
        android:textSize="@dimen/std_text_size"
        app:layout_constraintTop_toBottomOf="@id/compare_location_2"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/compareBarrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="end"
        tools:layout_editor_absoluteX="800dp"
        app:layout_constraintTop_toBottomOf="@id/compare_location_3"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/comparisonGraph"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="@dimen/text_margin"
        android:layout_margin="@dimen/text_margin"
        app:layout_constraintTop_toBottomOf="@id/compareBarrier"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>